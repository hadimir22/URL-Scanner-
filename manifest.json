{
    "manifest_version": 2, 
    "name" : "URL to QR",
    "description" : "scan QR code to open the site on your mobile",
    "version" : "1.0.1",
    "author" : "Hadi Mir",
    "icons" : {
        "128" : "icon128.png",
        "48" : "icon.png",
        "16" : "icon.png"
    },
    "permissions": [
        "activeTab"
      ],
        "background" : {
            "scripts" : ["jquery-3.3.1.min.js", "jquery.qrcode.min.js" ,"background.js"]
        },
        "browser_action" : {
            "default_icon" : "icon.png",
            "default_popup" : " index.html",
            "default_title" : "click to see QR code"
        }
 


}