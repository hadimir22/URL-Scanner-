{
    "manifest_version": 2, 
    "name" : "url scanner",
    "description" : "scan QR code to open the site on your mobile",
    "version" : "1.0.0",
    "author" : "Hadi Mir",
    "icons" : {
        "128" : "img.png",
        "48" : "img.png",
        "16" : "img.png"
    },
    "permissions": [
        "activeTab"
      ],
        "background" : {
            "scripts" : ["./jquery-1.5.2.min.js","background.js"]
        },
        "browser_action" : {
            "default_icon" : "img.png",
            "default_popup" : " index.html",
            "default_title" : "click to see QR code"
        }
 


}